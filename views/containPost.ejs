<%- include('./includes/header.ejs') %>

<div class="container py-5">
  <div class="row g-5 align-items-start">
    
    <!-- ===== Colonne gauche : Contenu ===== -->
    <div class="col-12 col-lg-7">
      <!-- Titre -->
      <h1 class="fw-bold mb-3"><%= post.title %></h1>

      <!-- Infos -->
      <div class="mb-4">
        <span class="badge bg-danger me-2"><%= post.agent_name %></span>
        <span class="badge bg-secondary me-2"><%= post.map_name %></span>
        <small class="text-muted">
          Publié le <%= new Date(post.date).toLocaleDateString('fr-FR') %>
        </small>
      </div>

      <!-- Image principale -->
      <% if (post.img) { %>
        <div class="mb-4">
          <img src="<%= post.img %>" 
               alt="<%= post.title %>" 
               class="img-fluid rounded shadow-sm w-100">
        </div>
      <% } %>

      <!-- Description -->
      <% if (post.description) { %>
        <p class="lead mb-4 text-muted"><%= post.description %></p>
      <% } %>

      <!-- Contenu du guide -->
      <div class="post-content">
        <p class="fs-5" style="line-height: 1.8;"><%= post.content %></p>
      </div>
    </div>

    <!-- ===== Colonne droite : Vidéo TikTok ===== -->
    <div class="col-12 col-lg-5">
      <% if (post.video_url && post.video_url.includes("tiktok.com")) { %>
        <div class="tiktok-wrapper">
          <blockquote 
            class="tiktok-embed" 
            cite="<%= post.video_url %>" 
            data-video-id="<%= post.video_url.split('/').pop() %>"
            style="max-width: 100%; min-width: 325px; margin: auto;">
            <section></section>
          </blockquote>
          <script async src="https://www.tiktok.com/embed.js"></script>
        </div>
      <% } else { %>
        <p class="text-muted">Aucune vidéo TikTok disponible pour ce guide.</p>
      <% } %>
    </div>
  </div>
</div>

<%- include('./includes/footer.ejs') %>
