    <!-- Mibibui -->
    <div class="col-md-4">
      <div class="card border-0 shadow-sm p-4 h-100">
        <img src="../img/setApropos/mibibui.jpg" alt="Mibibui" 
             class="rounded-circle mx-auto mb-3" 
             style="width:150px; height:150px; object-fit:cover;">
        <h3 class="fw-bold text-danger">Mibibui</h3>
        <p class="text-dark mb-1">🛡️ Le contrôleur</p>
        <p class="text-dark">Le stratège, main controller, toujours là pour tenir la ligne.</p>
      </div>
    </div>

    <!-- Biakuso -->
